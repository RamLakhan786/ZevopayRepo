@model FundManageModel

<div class="form-sample">
    <p class="card-description">
        Fund Manage
    </p>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group row">
                <label class="col-sm-3 col-form-label">Select User</label>
                <div class="col-sm-9">
                    <select class="form-control" asp-items="@Model.Users" id="memberId">
                        <option value="">Select User</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group row">
                <label class="col-sm-3 col-form-label">Select Factor</label>
                <div class="col-sm-9">
                    <select class="form-control" id="factor">
                        <option value="">Select Factor</option>
                        <option value="Cr">Cr</option>
                        <option value="Dr">Dr</option>
                    </select>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group row">
                <label class="col-sm-3 col-form-label">Amount</label>
                <div class="col-sm-9">
                    <input type="number" class="form-control" id="amount" min="0" step="0.01"/>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group row">
                <label class="col-sm-3 col-form-label">Description</label>
                <div class="col-sm-9">
                    <textarea id="description" class="form-control" cols="2" rows="2"></textarea>
                </div>
            </div>
        </div>
    </div>
    <input type="button" class="btn btn-primary btn-rounded btn-fw" id="fundManage_btn" value="Submit" />
</div>
