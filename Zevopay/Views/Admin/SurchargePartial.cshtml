@using Zevopay.Data.Entity
@model IEnumerable<Surcharge>
<table class="table">
    <thead>
        <tr>
            <th>TransactionType</th>
            <th>RangeFrom</th>
            <th>RangeTo</th>
            <th>Surcharge</th>
            <th>IsFlat</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model?.Count() > 0)
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.TransactionType</td>
                    <td>@item.RangeFrom</td>
                    <td>@item.RangeTo</td>
                    <td>@item.SurchargeAmount </td>
                    <td>@item.IsFlat</td>
                    <td>
                        <a class="btn btn-secondary btn-rounded btn-fw editSurchargeAdmin" asp-controller="Admin" asp-action="#">Edit</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>