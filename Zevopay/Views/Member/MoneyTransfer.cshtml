@model MoneyTransferModel

<h4 class="card-title">Money Transfer</h4>
<p class="card-description">
    Fill this form for money transfer
</p>
<div class="forms-sample">
    <div class="form-group">
        <label asp-for="PaymentMode">PaymentMode</label>
        <select asp-for="PaymentMode" class="form-control">
            <option value="">Select Mode</option>
            <option value="NEFT">NEFT</option>
            <option value="RTGS">RTGS</option>
            <option value="TMPS">TMPS</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="AccountNumber">AccountNumber</label>
        <input type="number" asp-for="AccountNumber" class="form-control" min="0" placeholder="AccountNumber">
    </div>
    <div class="form-group">
        <label asp-for="IFSCCode">IFSCCode</label>
        <input type="text" asp-for="IFSCCode" class="form-control" placeholder="IFSCCode">
    </div>
    <div class="form-group">
        <label asp-for="FullName">FullName</label>
        <input type="text" asp-for="FullName" class="form-control" placeholder="FullName">
    </div>
    <div class="form-group">
        <label asp-for="Amount">Amount</label>
        <input type="number" asp-for="Amount" class="form-control" step="0.01" min="0" placeholder="Amount">
    </div>

    <button type="button" class="btn btn-primary mr-2" id="MoneyTransfer_Submit_btn">Submit</button>
</div>
<script src="~/js/viewsscripts/MoneyTransfer.js"></script>